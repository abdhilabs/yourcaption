<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AddFragment"
        android:background="@color/coklat">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_centerHorizontal="true"
                android:text="Your Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title" android:layout_marginTop="30dp"
                android:fontFamily="@font/montserrat_bold" android:textSize="40sp" android:textColor="@color/biru"/>
        <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_title"
                android:text="Create, Save, and Copy your Caption "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sub_title"
                android:textSize="16sp" android:fontFamily="@font/montserrat"
                android:textColor="#173037"/>
        <EditText
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_sub_title"
                android:background="@drawable/bg_form"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:inputType="text"
                android:hint="Name"
                android:gravity="top"
                android:ems="10"
                android:id="@+id/et_caption" android:layout_marginTop="80dp"/>
        <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:id="@+id/linear_btn"
                android:layout_below="@id/et_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:gravity="center"

                    android:layout_marginEnd="50dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_btn_clear"
                    android:text="CLEAR"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="18sp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/btn_clear"/>
            <Button
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="18sp"
                    android:background="@drawable/bg_btn"
                    android:text="@string/save_copy"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/btn_save"/>
        </LinearLayout>
        <RelativeLayout
                android:layout_below="@+id/linear_btn"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="20dp">
            <TextView
                    android:text="Instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/biru"/>
            <TextView
                    android:layout_marginLeft="50dp"
                    android:text="Facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/biru"
                    android:layout_toEndOf="@id/textView1"/>
            <TextView
                    android:layout_marginTop="25dp"
                    android:text="WhatsApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/biru"
                    android:layout_below="@id/textView1"/>
            <TextView
                    android:layout_marginTop="25dp"
                    android:text="Twitter"
                    android:layout_marginStart="63dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/biru"
                    android:layout_below="@id/textView1"
                    android:layout_toEndOf="@id/textView3"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>